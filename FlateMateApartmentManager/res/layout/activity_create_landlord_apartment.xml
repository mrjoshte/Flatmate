<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#626465"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="activityfiles.CreateLandlordApartment" >

    <EditText
        android:id="@+id/CreateLandlordApartmentStreetAddress"
        android:layout_marginTop="0dp"
	    style="@style/usernameField"
	    android:hint="Apartment Address"/>

    <EditText
        android:id="@+id/CreateLandlordApartmentCity"
        android:layout_marginTop="50dp"
        style="@style/usernameField"
        android:hint="City"/>

    <EditText
        android:id="@+id/CreateLandlordApartmentAreaCode"
        android:layout_marginTop="100dp"
        style="@style/usernameField"
        android:hint="Area Code"/>

    <EditText
        android:id="@+id/CreateLandlordApartmentPassword"
        android:layout_marginTop="150dp"
        style="@style/passwordField"
        android:hint="Enter Apartment Password"/>

    <EditText
        android:id="@+id/CreateLandlordApartmentConfirmPassword"
        android:layout_marginTop="200dp"
        style="@style/passwordField"
        android:hint="Confirm Password"/>

    <Spinner
        android:id="@+id/CreateLandlordApartmentStateDropDownMenu"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:layout_alignLeft="@+id/passwordInCreateApartment"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:textColorHighlight="#ff7eff15" />
    
    <Button
        android:id="@+id/CreateLandlordApartmentContinueButton"
        style="@style/bottomRightBlueButton"/>

</RelativeLayout>