<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_create_user_account">
    
	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:fillViewport="true">
	    
		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin"
		    tools:context="activityfiles.Create_user_account" 
		    android:background="#626465">
			    
	
		    <TextView
		        android:id="@+id/createHeadingText"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_centerHorizontal="true"
		        android:layout_marginTop="15dp"
		        android:text="Create a New Account"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textColor="#ff6b35" />
		
		    <EditText
		        android:id="@+id/createFirstName"
		        android:layout_marginTop="70dp"
		        style="@style/usernameField"
		        android:hint="First Name"/>
		    
		    <EditText
		        android:id="@+id/createLastName"
		        android:layout_marginTop="120dp"
		        style="@style/usernameField"
		        android:hint="Last Name"/>
		    
		    <EditText
		        android:id="@+id/createEmail"
		        android:layout_marginTop="170dp"
		        style="@style/usernameField"
		        android:hint="Email"/>
		    
		    <EditText
		        android:id="@+id/createRepeatEmail"
		        android:layout_marginTop="220dp"
		        style="@style/usernameField"
		        android:hint="Repeat Email"/>
		    
		    <EditText
		        android:id="@+id/createUsername"
		        android:layout_marginTop="270dp"
		        style="@style/usernameField"
		        android:hint="Username"/>
		    
		    <EditText
		        android:id="@+id/createPassword"
		        android:layout_marginTop="320dp"
		        style="@style/passwordField"/>
		        
		    <EditText
		        android:id="@+id/createRepeatPassword"
		        android:layout_marginTop="370dp"
		        style="@style/passwordField"
		        android:hint="Repeat Password"/>
		    
		    <EditText
		        android:id="@+id/createDOB"
		        android:layout_marginTop="420dp"
		        style="@style/usernameField"
		        android:hint="Date of Birth: yyyy-mm-dd"/>
		
		    <Button
		        android:id="@+id/createUserAccountContinueButton"
		        style="@style/bottomRightBlueButton"
		        android:layout_marginTop="470dp"/>
			    
		</RelativeLayout>
		
	</ScrollView>
	
    <ListView
	    android:id="@+id/navList"
	    android:layout_width="200dp"
	    android:layout_height="match_parent"
	    android:layout_gravity="left|start"
	    android:background="#ffeeeeee"/>
    
</android.support.v4.widget.DrawerLayout>